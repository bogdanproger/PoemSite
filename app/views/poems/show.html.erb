<%currently_at 'Poems'%>

<% provide :page_title, "Show poem"%>

<h1><%= @poem.title%></h1>
<%= @poem&.category&.category%>
<div class="lead-my-3">
<%= sanitize @poem.body%>
</div>
 <%= link_to 'Edit', edit_poem_path(@poem.id), class:'btn btn-secondary' %> 
  <%= link_to 'Destroy', poem_path(@poem.id), class:'btn btn-danger', data: {method: :delete, confirm: 'Are you sure?'} %>
  <%= link_to 'Show', poem_path(@poem.id), class:'btn btn-primary' %> 

<hr class='mb-3'>
<h2>Write your comment:</h2>
<%= render 'comments/form'%>

  <h2 class="mt-5">Comments</h2>
  <%= paginate @comments%>

  <% @comments.each do |comment|%>
  <article class="mb-3 card" id="comment-<%= comment.id %>">
    <div class="card-body">
      <section class="card-text">
      <p class="mt-2 mb-3">
        <%= sanitize comment.body %>
      </p>
      </section>
  <%= link_to 'Delete', poem_comment_path(@poem, comment), class:'btn btn-danger btn-sm',  data: {method: :delete, confirm: 'Are you sure?'}%>
  <%= link_to 'Edit', edit_poem_comment_path(@poem, comment), class:'btn btn-info btn-sm'%>
  </div>
  </article>
  <%end%>
 <%= paginate @comments%>