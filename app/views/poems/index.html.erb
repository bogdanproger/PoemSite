<% provide :page_title, "Poems"%>
<%currently_at 'Poems'%>
<h1 class="mb-4">Poems</h1>
<hr>
<%= link_to 'New poem', new_poem_path, class:'btn btn-outline-primary'%>
<%= paginate @poems%>
<% @poems.each do |poem| %>
  <article class="card mb-3 ">
  <h5 class="card-header"><%= poem.title%></h5>
    <div class="card-body ">
     <section class="card-text ">
      <p class="my-2">
        <%= truncate strip_tags(poem.body), length: 50, omission: '... (continued)'%>
      </p>
     </section>
  <br>
  <%= link_to 'Edit', edit_poem_path(poem.id), class:'btn btn-secondary' %> 
  <%= link_to 'Destroy', poem_path(poem.id), class:'btn btn-danger', data: {method: :delete, confirm: 'Are you sure?'} %>
  <%= link_to 'Show', poem_path(poem.id), class:'btn btn-primary' %> 
  
    </div>
   </article>
<% end %>

<%= paginate @poems%>